extends layout

block content
  h1= title
  - let universities=[{University_Name:"Northwest Missouri State University",University_Location:"Maryville",Number_of_Courses_Offered:"265"},{University_Name:"Wright State University",University_Location:"Ohio",Number_of_Courses_Offered:"315"},{University_Name:"Uniniversit of central missouri",University_Location:"Warrensburg",Number_of_Courses_Offered:"250"}]
    
    div(class="container-fluid mt-3")
    div(class="row")
        each university,index in universities
            div(class="col-sm-2 bg-warning m-1 p-3" style="color:maroon; background-color:ivory;" onclick=`buy(${index})`)  #{university.University_Name} - #{university.University_Location} - #{university.Number_of_Courses_Offered}
    
    script.
     
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }
   
